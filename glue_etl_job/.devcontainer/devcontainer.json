{
  "name": "AWS Glue Dev Env",
  "image": "public.ecr.aws/glue/aws-glue-libs:5",
  "workspaceFolder": "/home/hadoop/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/hadoop/workspace,type=bind,consistency=cached"
  ],
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "settings": {
      "python.pythonPath": "/usr/bin/python3.11"
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.debugpy"
      ]
    }
  }
}